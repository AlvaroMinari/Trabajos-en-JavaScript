dineroCofla = prompt("cuanto dinero tiene cofla?");
dineroRoberto = prompt("cuanto dinero tiene Roberto?");
dineroPedro = prompt("cuanto dinero tiene Pedro?");

dineroCofla = parseInt(dineroCofla);

if(dineroCofla >= 0.6 && dineroCofla < 1 ){
	alert("Cofla, comprate el helado 1");
	alert("Te sobra este dinero: " + (dineroCofla-0.6));
}

else if(dineroCofla >= 1 && dineroCofla < 1.6 ){
	alert("Cofla, comprate el helado 2");
	alert("Te sobra este dinero: " + (dineroCofla-1));
}

else if(dineroCofla >= 1.6 && dineroCofla < 1.7 ){
	alert("Cofla, comprate el helado 3");
	alert("Te sobra este dinero: " + (dineroCofla-1.6));
}

else if(dineroCofla >= 1.8 && dineroCofla < 2.9 ){
	alert("Cofla, comprate el helado 4");
	alert("Te sobra este dinero: " + (dineroCofla-1.8));
}

else if(dineroCofla >= 2.9){
	alert("Cofla, comprate el helado 5 o el helado 6");
	alert("Te sobra este dinero: " + (dineroCofla-2.9));
}

else{
	alert("Cofla, no te alcanza para ningun helado")
}


if(dineroRoberto >= 0.6 && dineroRoberto < 1 ){
	alert("Roberto, comprate el helado 1")
}

else if(dineroRoberto >= 1 && dineroRoberto < 1.6 ){
	alert("Roberto, comprate el helado 2")
}

else if(dineroRoberto >= 1.6 && dineroRoberto < 1.7 ){
	alert("Roberto, comprate el helado 3")
}

else if(dineroRoberto >= 1.8 && dineroRoberto < 2.9 ){
	alert("Roberto, comprate el helado 4")
}

else if(dineroRoberto >= 2.9){
	alert("Roberto, comprate el helado 5 o el helado 6")
}

else{
	alert("Roberto, no te alcanza para ningun helado")
}


if(dineroPedro >= 0.6 && dineroPedro < 1 ){
	alert("Pedro, comprate el helado 1")
}

else if(dineroPedro >= 1 && dineroPedro < 1.6 ){
	alert("Pedro, comprate el helado 2")
}

else if(dineroPedro >= 1.6 && dineroPedro < 1.7 ){
	alert("Pedro, comprate el helado 3")
}

else if(dineroPedro >= 1.8 && dineroPedro < 2.9 ){
	alert("Pedro, comprate el helado 4")
}

else if(dineroPedro >= 2.9){
	alert("Pedro, comprate el helado 5 o el helado 6")
}

else{
	alert("Pedro no te alcanza para ningun helado") 
}
